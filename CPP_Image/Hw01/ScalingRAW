#ifndef OPEN_RAW
#define OPEN_RAW


#include <iostream>
#include <fstream>
#include <vector>
#include <string>
#include <cmath>
using namespace std;

class imgraw {
public:
    imgraw(int y, int x);
    void read(string filename);
    void write(string filename);
    unsigned char point_read(int y, int x);
    void point_write(int y, int x, unsigned char value);
    void resize_canvas(int y, int x);
    int w();
    int h();
    // 新增的功能
    void resize_zero(float Ratio);
    void resize_first(float Ratio);
    void resize_bicubic(float Ratio);

private:
    string filename;
    ifstream::pos_type filesize;
    vector<unsigned char> img_data;
    int width;
    int high;
    // 新增的功能
    unsigned char cubicInterpolate_char(
        unsigned char p[4], double x);
    unsigned char bicubicInterpolate_char(
        unsigned char p[4][4], double y, double x);
};


#include "ScalingRAW.cpp"
#endif