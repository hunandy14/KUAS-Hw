#ifndef OPEN_RAW
#define OPEN_RAW


#include <iostream>
#include <fstream>
#include <vector>
#include <string>
using namespace std;

class imgraw {
public:
    imgraw(int x, int y);
    void read(string filename);
    void write(string filename);
    unsigned char point_read(int x, int y);
    void point_write(int x, int y, unsigned char value);
    void resize_canvas(int y, int x);
    int w();
    int h();

private:
    ifstream::pos_type filesize;
    string filename;
    vector<unsigned char> img_data;
    int width;
    int high;
};


#include "OpenRAW.cpp"
#endif